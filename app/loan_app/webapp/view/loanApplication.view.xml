<mvc:View
    controllerName="loanapp.controller.loanApplication"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    >
    <App >
   
 
 
    <Page id="LApage" showHeader="false" enableScrolling="true" class="customPage">
   
     
        <content>
            <f:SimpleForm >
            <VBox class="formContainer" >
                <HBox class="formContainer">
                    <VBox width="50%"> 
                        <Input id="enterApplicantName" placeholder="Enter Applicant Name"  class="inputField"/>
                    </VBox>
                
                    <VBox width="50%">
                        <Input id="enterApplicantAddress" placeholder="Enter Applicant Address" class="inputField" />
                    </VBox>
                </HBox>
                <HBox class="formContainer">
                    <VBox width="50%">
                        <Input id="enterApplicantMobileNo" placeholder="Enter Applicant Mobile No" class="inputField" />
                    </VBox>
                
                    <VBox width="50%">
                        <Input id="enterEmailId" placeholder="Enter Applicant Email Id" class="inputField" />
                    </VBox>
                </HBox>
                <HBox class="formContainer">
                    <VBox width="50%">
                        <Input id="enterAadhaarNo" placeholder="Enter Aadhaar No" class="inputField" />
                    </VBox>
                    <VBox width="50%">
                         <Input id="enterPanNo" placeholder="Enter PAN No" class="inputField" />
                    </VBox>
                </HBox>
                <HBox class="formContainer">
                    <VBox width="50%">
                        <Input id="enterSalary" placeholder="Enter Salary" class="inputField" />
                    </VBox>
                    <VBox width="50%">
                        <Input id="selectloantype" placeholder="Select Loan Type" class="inputField" />
                    </VBox>
                </HBox>
                <HBox class="formContainer">
                    <VBox width="50%">
                        <Input id="enterloanamount" placeholder="Enter Loan Amount" class="inputField"/>
                    </VBox>
                </HBox>
                </VBox>
            </f:SimpleForm>
            
        </content>
        <footer>
            <Toolbar id="LAtoolbar" class="sapUiSmallMargin">
                <ToolbarSpacer id="LAtoolbarspacer" />
                <Button id="LAbutton1" text="Submit" press=".onSubmit" type="Emphasized" class="customButton" />
               
                <Button id="LAbutton2" text="Cancel" press=".onCancel" type="Reject" class="customButton" />
                <ToolbarSpacer id="LAtoolbarspacer1" />
            </Toolbar>
        </footer>
    </Page>
    </App>
</mvc:View>